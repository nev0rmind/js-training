let zylinderVolume = (radius, height) => {
    if (radius < 0 || height < 0 ) {
        return "Parameter sind negativ";
    }
    let volume = Math.PI * radius * radius * height;
    return volume; 
}
console.log(zylinderVolume(2, 3));


