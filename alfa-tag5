// Funktionsdefinition: nur für nicht-anonyme Funktionen möglich (Selbstaufruf)

function factorial(n){
    if (n === 0 || n === 1 ){
        return 1;
    } else {
        return (n * factorial(n-1))
    }
}

// Funktionsausdruck / function expression

