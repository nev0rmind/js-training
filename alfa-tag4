// Aufgabe 2

let weightToday = Number(prompt("Bitte gib dein heutiges Gewicht in kg ein."));
let weightYesterday = Number(prompt("Bitte gib dein gestriges Gewicht in kg ein:"));

let percentageLoss = (((weightYesterday-weightToday)/weightYesterday)*(100)).toFixed(2);
let percentageGain = ((weightYesterday-weightToday)/weightYesterday*(-100)).toFixed(2);


if (weightToday > weightYesterday){
  window.alert(`Oh no, du Fettsack hast ${percentageGain}% zugenommen. 1 Woche Schnitzelverbot!`)
}
else if (weightToday < weightYesterday){
  window.alert(`Wow! Du kleines Einhorn hast ${percentageLoss}% Gewicht verloren. Du hast dir ne Tofuwurst verdient!`)
}
else {
  window.alert(`Dein Gewicht ist konstant. Herzlichen GlÃ¼ckwunsch, Du bist ein Mensch.`)
}


