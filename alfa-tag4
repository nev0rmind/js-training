// do while schleife

let text = "Hallo ich spreche mit Dir! Ja mit Dir!";
let suche = " ";
let ersatz = "_";

do {
  text = text.substring(0, text.indexOf(suche)) + ersatz + text.substring(text.indexOf(suche+1))
  document.write(text + "<br>");
}
while (text.indexOf(suche != -1));


