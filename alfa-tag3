let date = prompt ("Bitte trage das Datum im folgenden Format ein TT.MM.JJJJ");

let day = date.substr(0,2);
let month = Number(date.substr(3,2));
let year = date.substr(6,4);

switch (month){
  case 1:
  var monthname = "Januar";
  break;
  case 2:
  var monthname = "Februar";
  break;
  case 3:
  var monthname = "Maerz";
  break;
  case 4:
  var monthname = "April";
  break;
  case 5:
  var monthname = "Mai";
  break;
  case 6:
  var monthname = "Juni";
  break;
  case 7:
  var monthname = "Juli";
  break;
  case 8:
  var monthname = "August";
  break;
  case 9:
  var monthname = "September";
  break;
  case 10:
  var monthname = "Oktober";
  break;
  case 11:
  var monthname = "November";
  break;
  case 12:
  var monthname = "Dezember";
  break;
  default:
  window.alert("That is not a month on earth");
}

window.alert(`Heute ist der ${day}.${monthname} ${year}`);

